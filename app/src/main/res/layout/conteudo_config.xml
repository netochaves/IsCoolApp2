<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <Switch
            android:text="Silenciar "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:layout_weight="1" />


    </LinearLayout>


    <View
        android:layout_marginTop="16dp"
        android:background="@color/colorDivider"
        android:layout_width = "fill_parent"
        android:layout_height="1dp" />

    <TextView
        android:text="Privacidade:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="#000"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"/>

    <RadioGroup
        android:id="@+id/myRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/alimentacao">


        <RadioButton
            android:id="@+id/visivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visível" />


        <RadioButton
            android:id="@+id/oculto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oculto" />


        <RadioButton
            android:id="@+id/invisivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invisível" />

    </RadioGroup>

    <View
        android:layout_marginTop="16dp"
        android:background="@color/colorDivider"
        android:layout_width = "fill_parent"
        android:layout_height="1dp" />

    <Button
        android:text="Sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSair"
        android:gravity="center"
        android:layout_gravity="center"
        android:onClick="sairDaAplicacao"
        android:layout_marginTop="16dp"/>


</LinearLayout>
